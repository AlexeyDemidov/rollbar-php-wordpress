{
    "name": "rollbar/rollbar-php-wordpress",
    "description": "WordPress plugin for Rollbar",
    "type": "wordpress-plugin",
    "require": {
        "rollbar/rollbar": "^1.3",
        "phpunit/phpunit": "4.8.*"
    },
    "license": "GNU GPL",
    "authors": [
        {
            "name": "flowdee",
            "email": "hello@flowdee.de"
        },
        {
            "name": "Artur Moczulski",
            "email": "artur.moczulski@gmail.com"
        },
        {
          "name": "Rollbar, Inc.",
          "email": "support@rollbar.com",
          "role": "Developer"
        }
    ],

    "support": {
        "email": "support@rollbar.com"
    },

    "autoload": {
      "psr-4": {
        "Rollbar\\Wordpress\\": "src/"
      }
    },
    "extra": {
        "scripts-description": {
            "test": "Run all tests. Make sure that local Mysql server is running."
        }
     },
    "scripts": {
        "test": [
            "@pre-test",
            "phpunit"
        ],
        "pre-test": [
            "bash bin/install-wp-tests.sh wordpress_test root '' localhost latest || true"
        ]
    }
}
